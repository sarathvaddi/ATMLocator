<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/atmlocator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atmlocatorid"
        android:layout_marginLeft="112dp"
        android:layout_marginStart="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atmlocatorid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/et_zipcodeid"
        android:hint="@string/zipcode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchid"
        android:layout_below="@+id/et_zipcodeid"
        android:layout_alignRight="@+id/atmlocatorid"
        android:layout_alignEnd="@+id/atmlocatorid"
        android:text="@string/Search" />
</RelativeLayout>
